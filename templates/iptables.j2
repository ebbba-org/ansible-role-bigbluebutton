# {{ ansible_managed }}
# Manual customization of this file is not recommended.
*filter
:INPUT DROP [5724:342893]
:FORWARD DROP [0:0]
:OUTPUT ACCEPT [14:777]

-A INPUT -m state --state ESTABLISHED,RELATED -j ACCEPT
-A INPUT -p icmp -j ACCEPT
-A INPUT -i lo -j ACCEPT
-A INPUT -m state --state NEW -m tcp -p tcp --dport {{ bbb_ssh_port }} -j ACCEPT
-A INPUT -p tcp -m tcp --dport 443 -j ACCEPT
-A INPUT -p udp -m udp --dport 443 -j ACCEPT
-A INPUT -p tcp -m tcp --dport 80 -j ACCEPT
-A INPUT -p udp -m udp --dport 80 -j ACCEPT
-A INPUT -p tcp -m tcp --dport {{ bbb_coturn_port }} -j ACCEPT
-A INPUT -p udp -m udp --dport {{ bbb_coturn_port }} -j ACCEPT
-A INPUT -p tcp -m tcp --dport {{ bbb_coturn_port_tls }} -j ACCEPT
-A INPUT -p udp -m udp --dport {{ bbb_coturn_port_tls }} -j ACCEPT
-A INPUT -p udp -m multiport --dports {{ bbb_coturn_min_port }}:{{ bbb_coturn_max_port }} -j ACCEPT
-A INPUT -p udp -m multiport --dports {{ bbb_freeswitch_min_port }}:{{ bbb_freeswitch_max_port }} -j ACCEPT

{% for network in bbb_firewall_allow_networks %}
-A INPUT -s {{ network }} -j ACCEPT
{% endfor %}

{% for network in bbb_firewall_reject_networks %}
-A INPUT -s {{ network }} -j REJECT --reject-with icmp-port-unreachable
{% endfor %}

-A INPUT -j REJECT --reject-with icmp-host-prohibited
-A FORWARD -j REJECT --reject-with icmp-host-prohibited
COMMIT
